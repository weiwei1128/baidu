<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background">

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="#"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/blue_circle"
                android:gravity="center"
                android:layout_marginRight="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="12345678"
                android:id="@+id/shoprecorditem_no"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016年3月10日"
                android:id="@+id/shoprecorditem_date"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp" />
        </LinearLayout>
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="＄ "
        android:id="@+id/shoprecorditem_money"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_below="@+id/layout"
        android:layout_alignLeft="@+id/layout"
        android:layout_alignStart="@+id/layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payed_text"
        android:id="@+id/shoprecorditem_state"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:textSize="14dp"
        android:layout_below="@+id/shoprecorditem_money"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="3dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="姓名： \n電話： \n"
        android:id="@+id/shoprecorditem_content"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_alignTop="@+id/shoprecorditem_state"
        android:layout_alignLeft="@+id/shoprecorditem_money"
        android:layout_alignStart="@+id/shoprecorditem_money"
        android:layout_marginBottom="10dp" />
</RelativeLayout>