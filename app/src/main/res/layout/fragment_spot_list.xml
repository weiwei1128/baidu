<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/spotList_pageLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#f7f7f7"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="＜  "
            android:id="@+id/lastpage_text"
            android:layout_marginRight="50dp"
            android:autoText="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:background="@drawable/click_effect_general"
            android:gravity="right" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spotList_textLayout"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="  ＞"
            android:id="@+id/nextpage_text"
            android:layout_marginLeft="50dp"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:background="@drawable/click_effect_general"
            android:gravity="left" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager
            android:id="@+id/spotList_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white">
        </android.support.v4.view.ViewPager>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:layout_marginTop="120dp" />
    </FrameLayout>

</LinearLayout>

