<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wei.travel.BuyItemListActivity">

    <LinearLayout
        android:id="@+id/shoprecord_Layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#5599FF"
        android:gravity="left"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buyitemlist_backImg"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/click_effect_general"
                android:src="@drawable/arrow_back_white" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/buyitemlistHeader"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/shoplist_text"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <LinearLayout
        android:id="@+id/buyitemlist_listLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FFBB00"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buyitemlist_listText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/click_effect_general"
            android:gravity="center"
            android:text="@string/gopay_text"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shoprecord_Layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />

</RelativeLayout>
